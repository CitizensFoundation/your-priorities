= form_for @page do |f|
  - if @page.errors.any?
    #error_explanation
      %h2= "#{pluralize(@page.errors.count, "error")} prohibited this page from being saved:"
      %ul
        - @page.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :weight
    = f.text_field :weight
  .field
    = f.label :hide_from_menu
    = f.check_box :hide_from_menu
  .field
    = f.label :hide_from_menu_unless_admin
    = f.check_box :hide_from_menu_unless_admin
  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :title
    = f.text_area :title
  .field
    = f.label :content
    = f.text_area :content, :size => "159x90"
  .actions
    = f.submit 'Save'
