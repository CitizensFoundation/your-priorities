%table{:width=>"100%"}
  %tr
    %th
      = "Ideas - #{Idea.unscoped.count} total"
    %th
      = "Sub Instances - #{SubInstance.unscoped.count} total"
    %th
      = "Points - #{Point.unscoped.count} total"
    %th
      = "Users - #{User.unscoped.count} total"
    %th
      = "Comments - #{Comment.unscoped.count} total"
  %tr
    %td
      %table{:width=>"100%"}
        - total = 0
        - @ideas_counts_per_day.each do |date,ideas_count|
          %tr
            %td
              = date
            %td{:style=>"align='right';"}
              = ideas_count
              - total+=ideas_count
        = #total
    %td
      %table{:width=>"100%"}
