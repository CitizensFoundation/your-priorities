.nav.nav-user
  %div
    %a{:href => SubInstance.current.external_link_url, :target=>"_blank"}
      %span
        %img{:border => "0", :src => SubInstance.current.external_link_logo_url}/

  %div.language_selection
    %a.language_selection{:href => "#"}
      %span
        = Tolk::Config.mapping[I18n.locale.to_s]

  %div.help
    %a.help{:href => "#"}
      %span
        = tr("About","About")

  - unless user_signed_in?
    %div.signedin
      %a.signin{:href => "#"}
        %div
          = tr("Sign in", "view/sessions/_form")
  - else
    %div.signedin
      - if current_user.unread_notifications_count > 0
        %div.notify_box
          %a.notifications{:href => "#"}
            %span.report_flag
              %img{:border => "0", :src => "/assets/flag_icon.png"}
              = current_user.unread_notifications_count
      %a.profile{:href => "#"}
        %div
          = current_user.login
  - if Plan.count>0 and Instance.current.about_page_name
    %div.create_instance
      %a.create_instance{:href => "#{Instance.current.homepage_top_url}home/about"}
        %span{:style=>"background-color: #bbb !important;margin-right: 1px;"}
          = tr("Get your own","here",:instance_name=>Instance.last.name)
  - elsif Plan.count>0
    %div.create_instance
      %a.create_instance{:href => "#{Instance.current.homepage_top_url}subscription_accounts/new"}
        %span{:style=>"background-color: #bbb !important;margin-right: 1px;"}
          = tr("Get your own","here",:instance_name=>Instance.last.name)
  - if Instance.current.domain_name.include?("yrpri")
    %div.donate
      %a.donate{:href => "#{Instance.current.homepage_top_url}donations/new"}
        %span{:style=>"background-color: #bbb !important;"}
          = tr("Donate","here")
- if user_signed_in?
  = render :partial => "shared/user_info"
  = render :partial => "shared/notifications"
- else
  = render :partial => "users/login"
= render :partial => "shared/language_selection"
= render :partial => "shared/help"
